@using Domain
@using Blazor.Auth
@inject IAuthService authService;

<div class="navbar navbar-expand-lg">
    <div class="container">
        <a class="navbar-brand fw-bold" href="#">Examination system</a>
        <button class="navbar-toggler" type="button" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>


@if (authService is JwtAuthService jwtAuthService)
{
    if (jwtAuthService.LoggedInUserType == JwtAuthService.UserType.Student)
    {
        <div class="@StudentNavMenuCssClass">
            <div class="sidebar" style="width: 250px;">
                <nav class="nav flex-column">
                    <NavLink class="nav-link py-3" href="" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> My classes
                    </NavLink>
                    <NavLink class="nav-link py-3" href="/SeeUsers">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> My exams
                    </NavLink>
                </nav>
            </div>
        </div>
    }
    else if (jwtAuthService.LoggedInUserType == JwtAuthService.UserType.Teacher)
    {
        <div class="@TeacherNavMenuCssClass">
        <div class="sidebar" style="width: 250px;">
            <nav class="nav flex-column">
                <NavLink class="nav-link py-3" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Home
                </NavLink>
                <NavLink class="nav-link py-3" href="/CreateUser">
                    <span class="oi oi-plus" aria-hidden="true"></span> Create User
                </NavLink>
                <NavLink class="nav-link py-3" href="/SeeUsers">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> See users
                </NavLink>
                <NavLink class="nav-link py-3" href="/CreateExam">
                    <span class="oi oi-plus" aria-hidden="true"></span> Create Exam
                </NavLink>
                <NavLink class="nav-link py-3" href="/CreateClass">
                    <span class="oi oi-plus" aria-hidden="true"></span> Create Class
                </NavLink>
            </nav>
        </div>
    </div>
    }
}
else
{
    <p>Unable to access the LoggedInUserType property.</p>
}

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : "";
    private string StudentNavMenuCssClass => collapseNavMenu ? "collapse" : "";
    private string TeacherNavMenuCssClass => collapseNavMenu ? "collapse" : "";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
